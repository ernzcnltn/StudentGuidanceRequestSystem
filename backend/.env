# FIU Student Guidance System Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=cilo1536

DB_NAME=fiu_guidance_db

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (Use a strong, random key for production)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random-123456789

# File Upload Configuration
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=jpeg,jpg,png,pdf,doc,docx,odt,csv

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Alternative Email Providers:
# 
# For Outlook/Hotmail:
# EMAIL_HOST=smtp-mail.outlook.com
# EMAIL_PORT=587
# 
# For Yahoo:
# EMAIL_HOST=smtp.mail.yahoo.com
# EMAIL_PORT=587
# 
# For custom SMTP:
# EMAIL_HOST=mail.yourdomain.com
# EMAIL_PORT=587

# Optional: Email Features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WELCOME_EMAILS=true
ENABLE_STATUS_UPDATE_EMAILS=true

# Optional: Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Optional: Session Configuration
SESSION_SECRET=your-session-secret-key

# Production Settings (set NODE_ENV=production)
# TRUST_PROXY=true
# SECURE_COOKIES=true
# HTTPS_PORT=443
